{
    "name": "mark-wiemer-com",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "dev": "vite",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix --max-warnings 0",
        "preview": "vite preview",
        "sort-package-json": "sort-package-json --check",
        "sort-package-json:fix": "sort-package-json",
        "validate": "bun sort-package-json && bun lint && bun format && echo ✅ All checks passed",
        "validate:fix": "bun sort-package-json:fix && bun lint:fix && bun format:fix && echo ✅ All checks passed"
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "overrides": [
            {
                "files": [
                    "*.yml",
                    "*.yaml",
                    ".prettierrc"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "dependencies": {
        "@fluentui/react-components": "^9.54.7",
        "@fluentui/react-icons": "^2.0.252",
        "@mdx-js/rollup": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.23.1",
        "three": "^0.165.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/three": "^0.165.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^9",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.12",
        "prettier": "3.3.3",
        "sort-package-json": "^2.10.1",
        "typescript": "^5.2.2",
        "typescript-eslint": "^8.10.0",
        "vite": "^5.2.0"
    }
}
